    <body>
        <referenceBlock name="shopflix_order_items">
            <block class="Onecode\ShopFlixConnector\Block\Adminhtml\Items\Column\DefaultColumn" name="column_price"
                   template="Onecode_ShopFlixConnector::items/price/unit.phtml" group="column"/>
